<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/informacion1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="287dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si eres trabajador, este apliccativo te permitira ampliar tu red contactos y dar a conoce a toda nuestra comunidad los servicios que ofreces"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:translationY="340dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Informacion"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:translationX="100dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrating Services  es un aplicativo que te ayuda a encontrar trabajadores que realicen los servicios que necesites. "
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:translationY="40dp" />

        <Button
            android:id="@+id/volver"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="VOLVER"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:translationX="120dp"
            android:translationY="220dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>